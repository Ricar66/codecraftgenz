# =============================================
# CODECRAFT GEN-Z FRONTEND - PRODUCAO
# =============================================
# Copie para .env.production antes do build de producao
# Configure estas variaveis no painel do Render/Hostinger
# =============================================

# URL da API backend (Render)
VITE_API_URL=https://codecraftgenz-monorepo.onrender.com

# Permite API externa em producao (OBRIGATORIO)
VITE_ALLOW_EXTERNAL_API=true

# PWA e cache
VITE_ENABLE_PWA=true
VITE_CACHE_MAX_AGE=86400

# Debug mode (desabilitado em producao)
VITE_DEBUG=false
VITE_APP_ENV=production

# Mercado Pago - PUBLIC KEY de producao
VITE_MERCADO_PAGO_PUBLIC_KEY=APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Controle de UI
VITE_ENABLE_CARD_PAYMENT_UI=false
VITE_ADMIN_PUBLIC_FALLBACK=off
