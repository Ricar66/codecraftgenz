generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

// Model para Projects
model Project {
  id          String   @id @default(cuid())
  title       String   @db.NVarChar(255)
  description String?  @db.NText
  status      String   @default("pending") @db.NVarChar(50)
  progress    Int      @default(0)
  imageUrl    String?  @db.NVarChar(500)
  demoUrl     String?  @db.NVarChar(500)
  githubUrl   String?  @db.NVarChar(500)
  technologies String? @db.NText // JSON string com array de tecnologias
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("projects")
}

// Model para Feedbacks
model Feedback {
  id        String   @id @default(cuid())
  name      String   @db.NVarChar(255)
  email     String?  @db.NVarChar(255)
  rating    Int      @default(5)
  message   String   @db.NText
  type      String   @default("general") @db.NVarChar(50)
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("feedbacks")
}
