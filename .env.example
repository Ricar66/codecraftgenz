# Configurações do servidor
PORT=8080
NODE_ENV=development

# Configurações da API
VITE_API_URL=http://localhost:8080
VITE_WP_API_URL=https://cms.codecraftgenz.com.br/wp-json

# Configurações de segurança
JWT_SECRET=your-super-secret-jwt-key-here
ADMIN_RESET_TOKEN=define-a-strong-admin-reset-token
EMAIL_USER=
EMAIL_PASS=

# Configurações PWA
VITE_ENABLE_PWA=true
VITE_CACHE_MAX_AGE=86400
# API base
# VITE_API_URL=http://localhost:8080

# Mercado Pago / Mercado Livre
# Access token privado (server-side)
MERCADO_PAGO_ACCESS_TOKEN=
# Public key (client-side quando necessário)
MERCADO_PAGO_PUBLIC_KEY=
VITE_MERCADO_PAGO_PUBLIC_KEY=

# Controla a exibição do formulário de pagamento por cartão no AppPurchasePage
# Defina como "true" para mostrar; deixe vazio/false para ocultar
VITE_ENABLE_CARD_PAYMENT_UI=false
# Pagamentos diretos usam MERCADO_PAGO_ACCESS_TOKEN no backend
# e (para cartão) requerem token gerado no cliente via SDK

# Admin: controla fallback público em telas administrativas
# Defina "on" para permitir fallback público quando não autenticado
# Defina "off" para exigir sessão admin (sem fallback)
VITE_ADMIN_PUBLIC_FALLBACK=off

# URLs de retorno do checkout
MERCADO_PAGO_SUCCESS_URL=http://localhost:5173/apps/:id/compra
MERCADO_PAGO_FAILURE_URL=http://localhost:5173/apps/:id/compra
MERCADO_PAGO_PENDING_URL=http://localhost:5173/apps/:id/compra

# Webhook para notificações de pagamento
MERCADO_PAGO_WEBHOOK_URL=http://localhost:8080/api/apps/webhook
MERCADO_PAGO_WEBHOOK_SECRET=

# Preferências padrão de pagamento (opcionais)
# Máximo de parcelas permitidas (1-24)
MERCADO_PAGO_INSTALLMENTS_MAX=
# Parcelas padrão sugeridas (1-24)
MERCADO_PAGO_DEFAULT_INSTALLMENTS=
# Tipos de pagamento a excluir (CSV de ids, ex: ticket,atm)
MERCADO_PAGO_EXCLUDED_PAYMENT_TYPES=
# Métodos de pagamento a excluir (CSV de ids, ex: visa,master)
MERCADO_PAGO_EXCLUDED_PAYMENT_METHODS=
# Descriptor curto na fatura (máx 22 chars)
MERCADO_PAGO_STATEMENT_DESCRIPTOR=

# OAuth Mercado Livre (opcional, se desejar fluxo completo OAuth)
MELI_CLIENT_ID=
MELI_CLIENT_SECRET=
MELI_REDIRECT_URI=http://localhost:8080/api/mercado-livre/oauth/callback
MELI_OAUTH_URL=https://api.mercadolibre.com/oauth/token
MELI_SYNC_URL=https://api.mercadopago.com/merchant_orders
MELI_LOG_LEVEL=info
